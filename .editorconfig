# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 120
indent_style = tab
indent_size = 2

[{*.nix{,.in},*.y{,a}ml,*.html{,.in},*.css}]
indent_style = space
indent_size = 2
